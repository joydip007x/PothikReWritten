<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".CreateATour"
    >


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha=".8"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/fui_transparent"
        android:fitsSystemWindows="true"
        android:scaleType="centerCrop"

        android:tint="#00F80404"
        app:srcCompat="@drawable/ghashpixel" />
    <EditText

        android:id="@+id/editTextCATTourDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="169dp"
        android:layout_marginBottom="566dp"
        android:ems="10"
        android:hint="Tour Date"
        android:inputType="datetime"
        android:textColor="#FFFFFF"
        android:textColorHint="#FFFFFF" />

    <EditText
        android:id="@+id/editTextCATTourLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="508dp"
        android:ems="10"
        android:hint="Tour Location"
        android:inputType="textPersonName"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextCATTourName"
        android:layout_width="wrap_content"
        android:textColorHint="#FFFFFF"

        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="623dp"
        android:ems="10"
        android:hint="Tour Name"

        android:inputType="textPersonName"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/editTextCATmoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColorHint="#FFFFFF"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="170dp"
        android:layout_marginBottom="455dp"
        android:ems="10"
        android:hint="Money Required"
        android:inputType="numberSigned"
        android:textColor="#FFFFFF"

        />

    <EditText
        android:id="@+id/editTextCATdetails"
        android:layout_width="366dp"
        android:layout_height="91dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="358dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="Tour details"

        android:inputType="textMultiLine"
        android:textColor="#FFFFFF"

        android:textColorHint="#FFFFFF" />

    <ImageView
        android:id="@+id/imageViewCATDP"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="282dp"
        android:layout_marginBottom="80dp"
        android:minWidth="128dp"
        android:minHeight="128dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/selectanimage4" />

    <ImageView
        android:id="@+id/imageViewCATDP2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="145dp"
        android:layout_marginBottom="80dp"
        android:minWidth="128dp"
        android:minHeight="128dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/selectanimage4" />

    <ImageView
        android:id="@+id/imageViewCATDP3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="80dp"
        android:minWidth="128dp"
        android:minHeight="128dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/selectanimage4" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="411dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-2dp"
        android:layout_marginBottom="249dp"
        android:alpha="1"
        android:background="@color/transparent"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:text="@string/Selectpic"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textColorHighlight="@color/WhiteColor" />

    <Button
        android:id="@+id/buttonPOSTIT"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:textStyle="bold"

        android:textColor="@color/WhiteColor"
        android:background="@color/BlackAccent"

        android:text="@string/post_it" />




</RelativeLayout>